@model DateTime?
    @if(!Model.HasValue)
            {
                <input type="date" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"
                       name="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"/>
            }
            else
            {
                <input type="date" @Model.Value.ToString("yyyy/MM/dd")
                       id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"
                       name="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" />
            }